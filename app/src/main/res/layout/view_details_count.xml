<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="@dimen/icon_count_size"
        android:layout_height="@dimen/icon_count_size"
        android:src="@drawable/ic_favorite_white_24dp"
        android:layout_marginEnd="@null"/>

    <TextView
        android:id="@+id/favCountTextView"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_s"
        android:paddingEnd="@dimen/space_s"
        tools:text="1"/>

    <ImageView
        android:layout_width="@dimen/icon_count_size"
        android:layout_height="@dimen/icon_count_size"
        android:src="@drawable/ic_thumb_up_white_24dp"
        android:layout_marginStart="@dimen/space_m"
        android:layout_marginEnd="@null"/>

    <TextView
        android:id="@+id/upVoteCountTextView"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_s"
        android:paddingEnd="@dimen/space_s"
        tools:text="1"/>

    <ImageView
        android:layout_width="@dimen/icon_count_size"
        android:layout_height="@dimen/icon_count_size"
        android:src="@drawable/ic_thumb_down_white_24dp"
        android:layout_marginStart="@dimen/space_m"
        android:layout_marginEnd="@null"/>

    <TextView
        android:id="@+id/downVoteCountTextView"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/space_s"
        android:paddingEnd="@dimen/space_s"
        tools:text="1"/>

</LinearLayout>
