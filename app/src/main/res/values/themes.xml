<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TheOfficeQuoteTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorError" tools:targetApi="26">@color/colorError</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:colorEdgeEffect">@color/colorEdge</item>
        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <!-- color for tab, toolbar, bototm navgation, snackbar -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>
        <!--Widgets -->
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.AppbarLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigation</item>
        <item name="materialButtonStyle">@style/Widget.Button</item>
        <!--Typography -->
        <item name="android:fontFamily">@font/default_work_font_family</item>
        <item name="textAppearanceHeadline1">@style/Typography.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Typography.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Typography.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Typography.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Typography.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Typography.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Typography.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Typography.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Typography.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/Typography.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/Typography.TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/Typography.TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/Typography.TextAppearance.Overline</item>
    </style>


    <!-- Typography https://material.io/develop/android/theming/typography/ -->
    <style name="Typography">
        <item name="fontFamily">@font/default_work_font_family</item>
        <item name="android:fontFamily">@font/default_work_font_family</item>
    </style>

    <style name="Typography.TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/bold_work_font_family</item>
        <item name="android:fontFamily">@font/bold_work_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Typography.TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="font">@font/work_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Typography.TextAppearance.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/bold_work_font_family</item>
        <item name="android:fontFamily">@font/bold_work_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Typography.TextAppearance.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="font">@font/work_sans_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Typography.TextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/bold_work_font_family</item>
        <item name="android:fontFamily">@font/bold_work_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- use for Toolbar title -->
    <style name="Typography.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="font">@font/work_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Typography.TextAppearance.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="font">@font/work_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Typography.TextAppearance.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Typography.TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/medium_work_font_family</item>
        <item name="android:fontFamily">@font/medium_work_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhiteVariant</item>
    </style>

    <style name="Typography.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/default_work_font_family</item>
        <item name="android:fontFamily">@font/default_work_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhiteDark</item>
    </style>

    <style name="Typography.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/medium_work_font_family</item>
        <item name="android:fontFamily">@font/medium_work_font_family</item>
    </style>

    <style name="Typography.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/default_work_font_family</item>
        <item name="android:fontFamily">@font/default_work_font_family</item>
    </style>

    <!-- use for  category, breadcrumb above a title for example -->
    <style name="Typography.TextAppearance.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/default_work_font_family</item>
        <item name="android:fontFamily">@font/default_work_font_family</item>
        <item name="android:letterSpacing">0.10</item>
    </style>



</resources>