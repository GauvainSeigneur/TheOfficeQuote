<resources>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_button_background_secondary</item>
        <item name="android:textColor">@color/selector_button_text_secondary</item>
    </style>

    <style name="Widget.AppbarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
        <!--<item name="itemIconSize">@dimen/bottom_nav_icon_size</item> -->
        <item name="itemIconTint">@color/selector_bottom_nav_menu_item</item>
        <item name="itemTextColor">@color/selector_bottom_nav_menu_item</item>
        <item name="backgroundTint">@color/colorSurface</item>
    </style>

    <style name="TextAppearance.Quote.Body" parent="@style/Typography.TextAppearance.Subtitle2">
        <item name="fontFamily">@font/work_sans_bold_italic</item>
        <item name="android:fontFamily">@font/work_sans_bold_italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Details.Quote.Body"
        parent="@style/Typography.TextAppearance.Headline5">
        <item name="fontFamily">@font/work_sans_bold_italic</item>
        <item name="android:fontFamily">@font/work_sans_bold_italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Quote.Author"
        parent="@style/TextAppearance.MaterialComponents.Caption"/>

    <style name="TextAppearance.Details.Quote.Author"
        parent="@style/TextAppearance.MaterialComponents.Body1"/>

    <style name="TextAppearance.Quote.Count"
        parent="@style/TextAppearance.MaterialComponents.Body1"/>
</resources>
